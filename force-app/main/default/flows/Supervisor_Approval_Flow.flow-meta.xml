<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <choices>
        <name>approve</name>
        <choiceText>Approve Escalation</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Approve Escalation</stringValue>
        </value>
    </choices>
    <choices>
        <name>reject</name>
        <choiceText>Reject Escalation</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Reject Escalation</stringValue>
        </value>
    </choices>
    <customProperties>
