                    <elementReference>approve</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Case_Approved</targetReference>
            </connector>
            <label>Approved</label>
        </rules>
    </decisions>
    <environments>Default</environments>
