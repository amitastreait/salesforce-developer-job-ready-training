<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionOverrides>
        <actionName>View</actionName>
        <type>Default</type>
    </actionOverrides>
    <allowInChatterGroups>true</allowInChatterGroups>
    <!-- Removing explicit compactLayoutAssignment to avoid 'no CompactLayout named System Default' error; Salesforce will assign default automatically -->
    <deploymentStatus>Deployed</deploymentStatus>
    <description>Stores details related to students enrolled in Salesforce training programs.</description>
    <enableActivities>true</enableActivities>
    <enableReports>true</enableReports>
    <enableSearch>true</enableSearch>
    <enableHistory>true</enableHistory>
    <label>Student</label>
    <pluralLabel>Students</pluralLabel>
    <nameField>
        <displayFormat>STU-{0000}</displayFormat>
        <label>Student Number</label>
        <type>AutoNumber</type>
    </nameField>
    <sharingModel>ReadWrite</sharingModel>
</CustomObject>
