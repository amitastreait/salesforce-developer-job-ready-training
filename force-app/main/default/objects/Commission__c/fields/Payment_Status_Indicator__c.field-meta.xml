<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_Status_Indicator__c</fullName>
    <description>Visual indicator for payment status</description>
    <externalId>false</externalId>
    <formula>CASE(TEXT(Payment_status__c),
  &quot;Paid&quot;, &quot;✅ PAID&quot;,
  &quot;Pending&quot;, &quot;⏳ PENDING&quot;,
  &quot;Cancelled&quot;, &quot;❌ CANCELLED&quot;,
  &quot;❓ UNKNOWN&quot;
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Payment Status Indicator</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
