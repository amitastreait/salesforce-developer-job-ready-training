<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Calculated_Commission__c</fullName>
    <description>Auto-calculates commission based on sale price and rate</description>
    <formula>IF(
  AND(NOT(ISBLANK(Opportunity__r.Amount)), NOT(ISBLANK(CommissionPercentage__c))),
  Opportunity__r.Amount * CommissionPercentage__c,
  0
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Calculated Commission</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
